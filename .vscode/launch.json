{
    "version": "0.2.0", 
    "configurations": [ 
      { 
        "name": "Listen for XDebug",
        "type": "php", 
        "request": "launch", 
        "stopOnEntry": false,
        "port": 9003, // port used in docker compose remote port attribute: XDEBUG_CONFIG: remote_port=9000
        "pathMappings": {
          "/var/www/html": "${workspaceFolder}"
        }
      },
      {
        "name": "Launch currently open script",
        "type": "php",
        "request": "launch", 
        "program": "${file}", 
        "cwd": "${fileDirname}",
        "port": 9000 // port used in docker compose remote port attribute: XDEBUG_CONFIG: remote_port=9000
      },
      {
        "name": "Listen for JS",
        "type": "chrome",
        "request": "launch",
        "url": "https://geneva.test/",
        "webRoot": "/Users/memo/dinkum-docker/sites/geneva/html",
      }
    ]
  }
  